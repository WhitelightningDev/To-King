<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Toking" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here -->

        <!-- Primary and Secondary Colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item> <!-- For tonal variations -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item> <!-- For tonal variations -->

        <!-- Dark Background Colors -->
        <item name="android:colorBackground">#121212</item> <!-- Dark gray for the main background -->
        <item name="colorSurface">#1E1E1E</item> <!-- Darker surface background for cards, sheets -->

        <!-- Text Colors for Dark Theme -->
        <item name="android:textColorPrimary">@color/white</item> <!-- White for high contrast -->
        <item name="android:textColorSecondary">@color/text_secondary</item> <!-- Light gray for secondary text -->

        <!-- Button Colors -->
        <item name="colorButtonNormal">@color/button_primary</item>
        <item name="colorAccent">@color/accent_color</item> <!-- Accent color remains the same -->
        <item name="colorControlHighlight">@color/button_secondary</item> <!-- Slightly lighter for disabled buttons -->
    </style>
</resources>
